<div class='portfolio_container'>
<h1>Portfolio (${{portfolioWorth}})</h1>
<div class="portfolio_interaction">
    <!-- portfolio_interaction -->
        <div class="portfolio_stocks">
            <ol class="stock_list">
                <!-- <li class="list-group-item">stock1</li>
                <li class="list-group-item">stock2</li>
                <li class="list-group-item">stock3</li>
                <li class="list-group-item">stock4</li> -->
                {{#each stocks}}
                <li class="list-group-item">
                    <div class="lead">
                 <h3>{{this.symbol}}</h3>
                 </div>
                      <div><small>{{this.quantity}}</small></div>
                      <!-- <div><small>{{this.quote}}</small></div> -->
                </li>
                {{/each}}
            </ol>
        </div>

        <div class="buy">
            <h2>Cash - ${{money}}</h2>
            <form class="buy" action="/buy" method="post">
              <div class="form-group">
                <input type="ticker" name="ticker" class="form-control" id="ticker" placeholder="Ticker">
              </div>
              <div class="form-group">
                <input type="qty" name="qty" class="form-control" id="qty" placeholder="Qty">
              </div>
              <button type="submit" class="btn btn-primary">Buy</button>
            </form>
        </div>
</div>
</div>
