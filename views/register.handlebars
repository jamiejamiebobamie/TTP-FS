<div class="register_container">
    <form class="register_sign-in" action="/register" method="post">
        <h2>Register</h2>
        <div class="form-group">
            <input type="text" name="username" class="form-control" id="user-username" placeholder="name">
        </div>
        <div class="form-group">
            <input type="text" name="email" class="form-control" id="user-email" placeholder="email">
        </div>
        <div class="form-group">
            <input type="text" name="password" class="form-control" id="user-password" placeholder="password">
        </div>
        <div class='text-right'>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
  </div>
