<div class="sign-in_container">
    <form class="register_sign-in" action="/sign-in" method="post">
      <h2>Sign IN</h2>
      <div class="form-group">
        <input type="text" name="username" class="form-control" id="user-username" placeholder="name">
      </div>
      <div class="form-group">
        <input type="text" name="password" class="form-control" id="user-password" placeholder="password">
      </div>
      <div class='text-right'>
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
</div>
